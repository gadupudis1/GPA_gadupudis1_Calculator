<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPA_Calculator"
        android:textColor="@color/teal_700"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098" />

    <EditText
        android:id="@+id/course1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="Enter Course1 Points"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        android:padding="16dp" />

    <EditText
        android:id="@+id/course2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Enter Course2 Points"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/course1"
        app:layout_constraintStart_toStartOf="@+id/course1"
        app:layout_constraintTop_toBottomOf="@+id/course1"
        android:padding="16dp"/>

    <EditText
        android:id="@+id/course3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Enter Course3 Points"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/course2"
        app:layout_constraintStart_toStartOf="@+id/course2"
        app:layout_constraintTop_toBottomOf="@+id/course2"
        android:padding="16dp"/>

    <EditText
        android:id="@+id/course4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Enter Course4 Points"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/course3"
        app:layout_constraintStart_toStartOf="@+id/course3"
        app:layout_constraintTop_toBottomOf="@+id/course3"
        android:padding="16dp" />

    <EditText
        android:id="@+id/course5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Enter Course5 Points"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/course4"
        app:layout_constraintStart_toStartOf="@+id/course4"
        app:layout_constraintTop_toBottomOf="@+id/course4"
        android:padding="16dp" />

    <Button
        android:id="@+id/btn_computeGPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Compute GPA"
        app:layout_constraintEnd_toEndOf="@+id/course5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/course5"
        app:layout_constraintTop_toBottomOf="@+id/course5" />


    <TextView
        android:id="@+id/GPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="GPA"
        android:textColor="@color/teal_700"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/course5"
        app:layout_constraintHorizontal_bias="0.595"
        app:layout_constraintStart_toEndOf="@+id/btn_computeGPA"
        app:layout_constraintTop_toBottomOf="@+id/course5" />
</androidx.constraintlayout.widget.ConstraintLayout>